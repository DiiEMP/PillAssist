<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#018DFE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#018DFE">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PillAssist"
                    android:textSize="30dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:fontFamily="sans-serif-black">
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="40dp"

                android:layout_marginBottom="-30dp"

                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crear cuenta"
                        android:textSize="20dp"
                        android:textColor="#018DFE"
                        android:gravity="center_horizontal"
                        android:padding="20dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="#E2F2FF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <EditText
                                android:id="@+id/nombre"
                                android:inputType="textPersonName"
                                android:hint="Nombre + Apellido"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/user"
                                android:drawablePadding="10dp"
                                android:drawableTint="#018DFE"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="30dp"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="#E2F2FF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <EditText
                                android:id="@+id/correo"
                                android:inputType="textEmailAddress"
                                android:hint="Correo"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/at"
                                android:drawablePadding="10dp"
                                android:drawableTint="#018DFE"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="30dp"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="#E2F2FF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <EditText
                                android:id="@+id/contrasena"
                                android:inputType="textPassword"
                                android:hint="ContraseÃ±a"
                                android:drawableLeft="@drawable/contra"
                                android:drawablePadding="10dp"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:drawableTint="#018DFE"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="30dp"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="#E2F2FF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <EditText
                                android:id="@+id/fechaNacimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                            />
                            <Button
                                android:id="@+id/btnfechaNacimiento"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:text="Fecha de nacimiento"
                                android:drawableLeft="@drawable/calendario"
                                android:backgroundTint="@color/blue_light"
                                android:paddingLeft="15dp"
                                android:fontFamily="sans-serif"
                                android:textSize="15dp"
                                android:drawableTint="#018DFE"
                                android:textColor="@color/gray_dark"
                                style="?android:spinnerStyle"
                                android:onClick="openDatePicker"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp">
                        <Button
                            android:id="@+id/Registrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#018DFE"
                            android:text="CREAR CUENTA"
                            android:fontFamily="sans-serif"/>
                        <Button
                            android:id="@+id/RegresarInicioSesion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:text="Iniciar sesiÃ³n"
                            android:fontFamily="sans-serif"
                            android:textColor="#018DFE"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
